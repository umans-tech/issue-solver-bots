#!/usr/bin/env just --justfile

# â¬‡ï¸ Install dependencies
install:
    @echo "Installing dependencies..."
    @pnpm install

# âš¡ï¸ Start local supabase server
supabase:
    @echo "Starting local Supabase server..."
    supabase start --exclude=vector

# ğŸ”Œ start backing services
start-services:
    @echo "Starting backing services..."
    @docker-compose up -d
    echo "Waiting services to start..."
    sleep 2

# ğŸ›‘ stop backing services
stop-services:
    @echo "Stopping backing services..."
    @docker-compose down

# âŒ destroy backing services
destroy-services:
    @echo "Destroying backing services..."
    @docker-compose down -v

# â¬†ï¸ Migrate the database
migrate:
    @echo "Migrating the database..."
    @pnpm run db:migrate

# â–¶ï¸ Start the development server
dev: install start-services migrate
    @echo "Starting the development server..."
    @pnpm run dev

# ğŸ“¦ Build the project
build:
    @echo "Building the project..."
    @pnpm build

# ğŸ“ Lint the code
lint:
    @echo "Linting the code..."
    @pnpm lint

# âœ¨ Fix linting issues
lint-fix:
    @echo "Fixing linting issues..."
    @pnpm lint:fix

# ğŸ•µï¸â€â™‚ï¸ Audit the code
audit:
    @echo "Auditing the code..."
    @pnpm audit

# ğŸ©¹ Fix audit issues
audit-fix:
    @echo "Fixing audit issues..."
    @pnpm audit fix

# ğŸ³ Build Docker container
docker-build:
    @echo "Building Docker image for conversational-ui..."
    @docker build -t conversational-ui:latest .

# ğŸš€ Run the Docker container without migrations
docker-run:
    @echo "Running Docker container without migrations..."
    @docker run -p 3000:3000 --env-file .env conversational-ui:latest

# ğŸŒ Run with Docker Compose (includes PostgreSQL and MinIO)
docker-compose-up:
    @echo "Starting all services with Docker Compose..."
    @docker-compose -f docker-compose.yml -f docker-compose.app.yml up -d

# ğŸ›‘ Stop Docker Compose services
docker-compose-down:
    @echo "Stopping all services..."
    @docker-compose -f docker-compose.yml -f docker-compose.app.yml down

# ğŸ”Reset a user's password by email. Usage: just reset-password user@example.com
reset-password EMAIL:
    @echo "Resetting password for user: {{EMAIL}}"
    @node scripts/reset-password.js {{EMAIL}}