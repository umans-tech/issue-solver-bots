#!/usr/bin/env just --justfile

alias t := test
alias c := check-typing
alias l := lint
alias f := format

# âœ… Run all tests
test:
    uv run pytest

# ğŸ§¹ Lint the code
lint:
    uv run ruff check

# ğŸ¨ Format the code
format:
    uv run ruff format

set dotenv-load := true

# ğŸš€ Start the API
api-start:
    uv run fastapi dev src/issue_solver/webapi/main.py

# â‡ï¸ Check typing with mypy
check-typing:
    uv run mypy src tests --disable-error-code=import-untyped
